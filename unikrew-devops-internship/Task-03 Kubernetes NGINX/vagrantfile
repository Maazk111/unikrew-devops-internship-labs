Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/jammy64"

  # Control Plane Node
  config.vm.define "cp1" do |cp1|
    cp1.vm.hostname = "cp1"
    cp1.vm.network "private_network", ip: "192.168.56.10"
    cp1.vm.provider "virtualbox" do |vb|
      vb.memory = 4096
      vb.cpus = 2
    end
  end

  # Worker Node
  config.vm.define "w1" do |w1|
    w1.vm.hostname = "w1"
    w1.vm.network "private_network", ip: "192.168.56.11"
    w1.vm.provider "virtualbox" do |vb|
      vb.memory = 4096
      vb.cpus = 2
    end
  end
end